<nav class="navbar navbar-light bg-light d-flex justify-content-start">
  <%= link_to 'Back to restaurants list', restaurants_path, class:"btn btn-primary mx-2" %>
  <%= link_to @restaurant.name, restaurant_path(@restaurant), class:"btn btn-primary mx-2" %>
</nav>

<div class="container mt-4">
  <div class="form col-6 offset-3">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content%>
      <%= f.input :rating %>
      <%= f.submit class:'btn btn-primary'%>
    <% end %>
  </div>


</div>
